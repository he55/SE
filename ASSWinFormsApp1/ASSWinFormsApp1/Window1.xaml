<Window x:Class="ASSWinFormsApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASSWinFormsApp1"
        mc:Ignorable="d"
            WindowStyle="None" ResizeMode="CanMinimize"
        Title="Window1" Height="200" Width="300" Topmost="True"  ShowInTaskbar="False">
                <WindowChrome.WindowChrome>
            <WindowChrome GlassFrameThickness="-1" />
        </WindowChrome.WindowChrome>
        <Window.Template>
            <ControlTemplate TargetType="Window">
                <Border Padding="15" Background="Transparent">
                    <Border CornerRadius="5" Background="White">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.6" ShadowDepth="0" />
                        </Border.Effect>
                        <ContentPresenter ClipToBounds="True" />
                    </Border>
                </Border>
            </ControlTemplate>
        </Window.Template>
    <Grid Margin="5">
            <Image x:Name="image1"/>
    </Grid>
</Window>
